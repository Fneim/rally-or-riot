<h2>Explore</h2>
<h5>Hurray! {{user.username}} you are logged in.</h5>

<div id="beaconForm" style="display:none">
    <form>
        <div class="row">
            <div class="input-field col s6">
                <input placeholder="Enter a creative title" id="name" type="text" class="validate">
                <label for="name">Beacon Name</label>
            </div>

            <div class="input-field col s6">
                <input placeholder="What are you doing here?" id="activity" type="text" class="validate">
                <label for="activity">Activity</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <select id="category" name="category">
                        <option data-icon="images/sample-1.jpg" class="circle" value="concert">Concerts</option>
                        <option data-icon="images/sample-1.jpg" class="circle" value="exercise">Exercising</option>
                        <option data-icon="images/sample-1.jpg" class="circle" value="food">Eating</option>
                        <option data-icon="images/sample-1.jpg" class="circle" value="party">Parties</option>
                        <option data-icon="images/sample-1.jpg" class="circle" value="politcal">Political</option>
                        <option data-icon="images/sample-1.jpg" class="circle" value="social">Social</option>
                        <option data-icon="images/sample-1.jpg" class="circle" value="study">Studying</option>
                        <option data-icon="images/sample-1.jpg" class="circle" value="uncategorized" selected>Uncategorized</option>
                        <option data-icon="images/sample-1.jpg" class="circle" value="yardsale">Yard Sale</option>
                </select>
                <label for="category">Category</label>
            </div>

            <!-- TODO: Beacon Demographics <div class="row">
                <div class="input-field col s6">
                    <div id="ages"></div>
                    <label for="ages">Age Group</label>
                </div>
                <div class="input-field col s6">
                    <input type="checkbox" class="filled-in" id="male" value="male"/>
                    <label for="male">Allow Men</label>
                    <input type="checkbox" class="filled-in" id="female" value="female"/>
                    <label for="female">Allow Women</label>
                </div>
            </div> -->
            <button class="btn waves-effect waves-light grey" id="beaconSubmit" type="submit">Create</button>
        </form>
    </div>

    <div class="beacons">
        <div class="row">
            <div class="col s12 m7 l7">
                {{#each beacon}}
                    <div class="card">
                        <div class="card-content">
                            <span class="card-title">{{this.name}}</span>
                            <p>{{this.activity}}</p>
                        </div>
                        <div class="card-action">
                            <div id="bar">
                        		<div id="rallies-{{this.id}}">{{this.rallies}}</div>
                        		<div id="riots-{{this.id}}">{{this.riots}}</div>
                        	</div>

                            <div id="{{this.id}}">
                                <button class="btn waves-effect waves-light grey rallyBtn">
                                    <img class="vote-ra" src="/assets/img/icon-rally.svg">Rally
                                </button>
                                <button class="btn waves-effect waves-light grey riotBtn">
                                    <img class="vote-ri" src="/assets/img/icon-riot.svg">Riot
                                </button>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>

        <!-- <div class="row">
            <div class="input-field col s6">
                <div id="ages"></div>
                <label for="ages">Age Group</label>
            </div>
            <div class="input-field col s6">
                <input type="checkbox" class="filled-in" id="male" value="male"/>
                <label for="male">Allow Men</label>
                <input type="checkbox" class="filled-in" id="female" value="female"/>
                <label for="female">Allow Women</label>
            </div>
        </div> -->
        <button id="beaconSubmit" type="submit">Create</button>
    </form>
</div>

<button id="beaconCreate">+</button>

<script src="../assets/js/beacon.js"></script>
<script>
    $('#beaconCreate').on('click', function(event){
            $('#beaconForm').toggle(400);
    });
    $(document).ready(function() {
        $('select').material_select();
    });
</script>